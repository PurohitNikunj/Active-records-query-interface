<%= form_with html: {class: 'productform'}, model: employee  do |f| %>
    
    <% if flash[:alert] %>
        <p class="alert alert-danger"> <%= flash[:alert] %> </p>
    <% end %>

    <div class="mb-3">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control"%>
        <% employee.errors.full_messages_for(:first_name).each do |msg| %>
            <div class="error-msg">
                <%= msg %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control"%>
        <% employee.errors.full_messages_for(:last_name).each do |msg| %>
            <div class="error-msg">
                <%= msg %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control"%>
        <% employee.errors.full_messages_for(:email).each do |msg| %>
            <div class="error-msg">
                <%= msg %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :age %>
        <%= f.text_field :age, class: "form-control"%>
        <% employee.errors.full_messages_for(:age).each do |msg| %>
            <div class="error-msg">
                <%= msg %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :no_of_orders %>
        <%= f.text_field :no_of_orders, class: "form-control"%>
        <% employee.errors.full_messages_for(:no_of_orders).each do |msg| %>
            <div class="error-msg">
                <%= msg %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :full_time_available %>
        <%= f.check_box :full_time_available%>
        <% employee.errors.full_messages_for(:full_time_available).each do |msg| %>
            <div class="error-msg">
                <%= msg %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= f.label :salary %>
        <%= f.text_field :salary, class: "form-control"%>
        <% employee.errors.full_messages_for(:salary).each do |msg| %>
            <div class="error-msg">
                <%= msg %>
            </div>
        <% end %>
    </div>

    <%= f.hidden_field :lock_version %>
    <% employee.errors.full_messages_for(:lock_version).each do |msg| %>
            <div class="error-msg">
                <%= msg.type %>
            </div>
        <% end %>

    <div class="mb-3">
        <%= f.submit value: "Submit", class: "btn btn-success"%>
    </div>
    
<% end %>
