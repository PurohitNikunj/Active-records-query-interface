<div class="body-container">

    <% if flash[:notice] %>
        <p class="alert alert-success"><%= flash[:notice] %></p>
    <% end %>
    
    <div class="heading">
        <h1>Employee-info</h1>
    </div>
  
    <%= render 'increment', employee: @employee %>

    <div class="bottom-button">
        <%= link_to "Employee Home", employees_path, class:"btn btn-info" %>
    </div>

    <br>
    <div class="bottom-button-2">
        <%= link_to "Increase-Order", "/inc_order/"+String((@employee.id)), remote: true, class: "btn btn-success" %>
        <%= link_to "Decrease-Order", "/dec_order/"+String((@employee.id)), remote: true, class: "btn btn-danger" %>
    </div>

</div>
