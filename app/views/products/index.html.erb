<div class="body-container">
  <p style="color: green"><%= notice %></p>

  <h1>Products</h1>

  <div id="products">
    <% @products.each do |product| %>
      <%= render product %>
      <p>
        <%= link_to "Show #{product.title}", product, class:"btn btn-info" %>
      </p>
    <% end %>
  </div>

  <%= link_to "New product", new_product_path, class:"btn btn-info" %>

  <%= link_to "Default Scope",default_scope_path, style:"margin-top:5px", class:"btn btn-info" %>
</div>
