<div class="body-container">

  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <h1>Products</h1>

  <div id="products", class="table-form">
    <table>
      <tr>
        <th>Product-name</th>
        <th>Action</th>
      </tr>

      <% @products.each do |product| %>
        <tr>
          <%= render product %>
          <td><%= link_to "Show ", product, class:"btn btn-success" %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <%= link_to "New product", new_product_path, class:"btn btn-info" %>
</div>
