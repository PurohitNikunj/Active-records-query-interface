
  <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_field :description, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :capacity, style: "display: block" %>
      <%= form.number_field :capacity, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :is_active, style: "display: block" %>
      <%= form.check_box :is_active %>
    </div>

    <div class="mb-3">
      <%= form.label :status, style: "display: block" %>
      <%= form.select :status, Product.statuses.keys, class:"form-control" %>
    </div>

    <div class="mb-3">
      <%= form.submit class:"btn btn-success" %>
    </div>
  <% end %>
