<div class="body-container">
  <p style="color: green"><%= notice %></p>

  <%= render @product %>

  <div>
    <%= link_to "Edit this product", edit_product_path(@product), class:"btn btn-info" %> |
    <%= link_to "Back to products", products_path, class:"btn btn-info" %>

    <%= button_to "Destroy this product", @product, method: :delete, style:"margin-top:5px; margin-left:60px", class:"btn btn-danger" %>
  </div>
</div>
