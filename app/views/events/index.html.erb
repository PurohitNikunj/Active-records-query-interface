<%= render 'shared/navbar' %>

<p style="color: green"><%= notice %></p>

<div class="body-container">
  <% if @user.present? %>
    <h1>Events</h1>

    <div id="events">
      <% @events.each do |event| %>
        <%= render event %>
        <p>
          <%= link_to "Show this event", event, class:"btn btn-info" %>
        </p>
      <% end %>
    </div>

    <%= link_to "New event", new_event_path, class:"btn btn-primary" %>
  <% end %>
</div>
