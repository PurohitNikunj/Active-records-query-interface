<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Picture:</strong>
    <% if !user.picture.file.nil? %>
      <%= image_tag user.picture.thumb.url %>
    <% end %>
  </p>

</div>
