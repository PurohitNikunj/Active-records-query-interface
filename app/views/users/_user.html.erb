<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Subscription:</strong>
    <%= user.subscription %>
  </p>


  <% if user.subscription == true %>
    <p>
      <strong>Subscription email:</strong>
      <%= user.subscription_email %>
    </p>
  <% end %>

</div>
