<% if flash[:alert] %>
    <p class="alert alert-danger"> <%= flash[:alert] %> </p>
<% end %>

<div class="body-container">
    <%= form_with html: {class: "table-form" }, url: login_path do |f| %>

        <div class="mb-3">
            <%= f.label :username %>
            <%= f.text_field :username, placeholder:"enter youe email-id here", class:"form-control" %>
        </div>

        <div class="mb-3">
            <%= f.label :password %>
            <%= f.password_field :password, class:"form-control" %>
        </div>

        <div class="mb-3">
            <%= f.submit "Login", class:"btn btn-success" %>
        </div>

    <% end %>

    <p><small class="text-muted">New to Application?</small>
        <%= link_to "New Registration", new_user_path, class:"btn btn-primary" %>
    </p>

    <%= link_to "Home", home_path, class:"btn btn-info" %>
</div>
